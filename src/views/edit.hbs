<div class="container">
  <div class="row">
    <div class="col-md-5 offset-md-3">
      <div class="card card-body bg-dark text-white">
        <h3>Actualizar Informacion de Task</h3>
        <form action="/edit/{{task._id}}" method="POST">
          <div class="mb-3">
            <input
              type="text"
              name="title"
              id="title"
              placeholder="Writer Title"
              value="{{task.title}}"
              class="form-control rounded-0 bg-dark text-white"
            />
          </div>
          <textarea
            name="description"
            rows="3"
            placeholder="Writer Description"
            class="form-control rounded-0 bg-dark text-white"
          >{{task.description}}</textarea>
          <button class="btn btn-primary btn-sm mt-2">Update</button>
        </form>
      </div>
    </div>
  </div>
</div>