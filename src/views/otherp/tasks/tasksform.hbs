<div class="card card-body p-4 rounded-0 bg-dark text-white">
  <h1>Add A Task:</h1>
  <form action="/task/add" method="POST">
  <div>
    <label for="title">Writer Title:</label>
    <input type="text" name="title" id="title" placeholder="Writer Title" class="form-control rounded-0 bg-dark text-white" />
  </div>
  <div>
    <label for="Description">Writer Description:</label>
    <textarea
      name="description"
      id="description"
      placeholder="Writer Description"
      class="form-control rounded-0 bg-dark text-white"
    ></textarea>
  </div>
  <button     class="btn btn-primary btn-sm mt-2">Add</button>
</form>
</div>